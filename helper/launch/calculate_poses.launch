<launch>   
    <node name="pose_calculator" type="calculate_poses_node.py" pkg="helper" output="screen">
        <param name="file_path"             value="$(find detection_localisation)/poses/"/>
        <param name="linear"                value="true"/>
        <param name="circular"              value="true"/>
        <param name="radius"                value="1.0"/>
        <param name="angle_range"           value="180"/>
        <param name="number_of_poses"       value="12"/>
        <param name="stepOffset"            value="0.5"  />
        <param name="stepDistance"          value="0.2"/>
    </node> 

</launch>

